<form id="quick-search" action="[[~[[+landing:default=`[[*id]]`]]]]" method="[[+method:default=`get`]]">
    <p>
        <label for="[[+searchIndex]]">[[%sisea.search? &namespace=`sisea` &topic=`default`]]</label>
        <input type="text" name="[[+searchIndex]]" id="[[+searchIndex]]" value="[[+searchValue]]">
        <input type="hidden" name="id" value="[[+landing:default=[[*id]]]]">
        <button type="submit">[[%sisea.search? &namespace=`sisea` &topic=`default`]]</button>
    </p>
</form>
